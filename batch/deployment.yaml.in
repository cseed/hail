apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: batch
  labels:
    app: batch
    hail.is/sha: "{{ pr.sha }}"
spec:
  selector:
    matchLabels:
      app: batch
  replicas: 1
  template:
    metadata:
      labels:
        app: batch
        hail.is/sha: "{{ pr.sha }}"
    spec:
      serviceAccountName: batch
      containers:
      - name: batch
        image: "{{ batch_image.image }}"
        env:
          - name: POD_NAMESPACE
            value: "{{ batch_pods_ns.name }}"
        ports:
        - containerPort: 5000
        volumeMounts:
        - name: sql-batch-batch-admin-config
          mountPath: /sql-batch-batch-admin-config
          readOnly: true
      volumes:
      - name: sql-batch-batch-admin-config
        secret:
          optional: false
          secretName: {{ batch_database.admin_secret }}
---
apiVersion: v1
kind: Service
metadata:
  name: batch
  labels:
    app: batch
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 5000
  selector:
    app: batch
