apiVersion: apps/v1
kind: Deployment
metadata:
  name: notebook2
  labels:
    app: notebook2
    hail.is/sha: "{{ pr.sha }}"
spec:
  selector:
    matchLabels:
      app: notebook2
  replicas: 1
  template:
    metadata:
      labels:
        app: notebook2
        hail.is/sha: "{{ pr.sha }}"
    spec:
      serviceAccountName: notebook
      containers:
      - name: notebook2
        image: "{{ notebook2_image.image }}"
        env:
        - name: HAIL_NOTEBOOK2_WORKER_IMAGE
          value: "{{ hail_jupyter_image.image }}"
        ports:
        - containerPort: 5000
        volumeMounts:
          - mountPath: /notebook-secrets
            readOnly: true
            name: notebook-secrets
      volumes:
        - name: notebook-secrets
          secret:
            secretName: notebook-secrets
---
apiVersion: v1
kind: Service
metadata:
  name: notebook2
  labels:
    app: notebook2
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 5000
  selector:
    app: notebook2
